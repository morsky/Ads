@{
    ViewBag.Title = "Home Page";
}

@model IEnumerable<Ads.ViewModels.AdViewModel>

@if (Model.Count() == 0)
{
    <div class="jumbotron">
        <h1 class="text-center">Empty DataBase! No Ads here!!!</h1>
    </div>    
}

@foreach (var item in Model)
{
    <div class="jumbotron">
        <p>@item.Title</p>
        <p>@item.Content</p>
        <p>Created on: @String.Format("{0:d} at: {0:t}", item.CreatedOn)</p>
        @if (item.User != null)
        {
            <p>Created by: @item.User.UserName</p>
        }
    </div>
}